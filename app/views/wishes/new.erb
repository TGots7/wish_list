<h1 class="text-center title">Add a wish to your Xmas Wish List</h1>
<h3 class="text-center title-2"> New wish! </h3>

<div class="container">
	<div class="row">
		<div class="col-sm-4"></div>
			<div class="col-sm-4 box">
				<form method="POST" action="/wishes" class="text-center">	
					<label>Add Wish:</label><br>
					<input type="text" name="wish[content]" value="Add a wish"><br>
					
				    <% Event.all.each do |event| %>
				        <input id="event_<%= event.id %>" type="checkbox" name="wish[event_ids][]" value="<%= event.id %>" class="text-center"> <%= event.event %>
				    <% end %>
				    
				        <br> or create new Event:<br>
				        <input type="text" name="event" class="text-center"><br>
				        <input type="submit" name="submit" value="submit" class="buttons"><br>
				 </form>
		 	</div>
	</div>   

	<div class="row">
		<div class="col-sm-4"></div>
		<div class="col-sm-4">
			<div class="col-sm-4"></div>
			<div class="col-sm-4">
					<a href="/home" class="text-center buttons">
						<button type="submit">-My Page-</button>
					</a>
			</div>
	</div>
</div>