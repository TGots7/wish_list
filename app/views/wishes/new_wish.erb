
	<% if flash.has?(:message) %>
	  <div class="flash_green"><%= flash[:message] %></div>
	<% end %>
<div class="jumbotron">
	<h1 class="text-center">Welcome <%= @user.name.capitalize %> </h1>
</div>
	<h5 class="text-center">Here is the new wish you just added to your wish list</h5>
			<<div class="container">
				<div class="row">
					<div class="col-sm-4"></div>
						<div class="col-sm-4 offset-sm-4 box">	
							<div class="text"><p class="text-center"> <%= @new_wish.content %> </p></div>

								<% Event.all.each do |e| %>
						         <input type="checkbox" name="wish[e]" value="<%= e.event %>" class="text-center" <%= 'checked' if @new_wish.events.include?(e) %>> <%= e.event %> 
						        <% end %>
						        <div class="row">	
									<div class="col-sm-6">
										<form method="get" action="/wishes/<%= @new_wish.id %>/edit" class="text-center buttons">
											<button type="submit">-Edit-</button>
										</form>
									</div>
									<div class="col-sm-6">
										<form method="post" action="/wishes/<%= @new_wish.id %>/delete" class="text-center buttons">
											<input type="hidden" name="_method" value="delete">
											<input type="submit" name="submit" value="Delete">
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
<div class="row">	
	<div class="col-sm-4"></div>
		<div class="col-sm-4">
		<div class="col-sm-6">
			<form method="get" action="/home" class="text-center buttons">
				<button type="submit">-My page-</button>
			</form>
		</div>
		<div class="col-sm-6">
			<form method="get" action="/all_wishes" class="text-center buttons">
				<button type="submit">-All Wishes-</button>
			</form>
		</div>
	</div>
</div>

